{
    "name": "tinycore",
    "version": "0.1.0",
    "description": "Simple key-value store service for TinyCore infrastructure",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "dev": "pnpm --filter @tinycore/server run dev",
        "dev:admin-ui": "pnpm --filter @tinycore/admin-ui run dev",
        "dev:server": "pnpm --filter @tinycore/server run dev",
        "dev:all": "pnpm -r --parallel run dev",
        "build": "pnpm -r run build",
        "build:server": "pnpm --filter @tinycore/server run build",
        "build:admin-ui": "pnpm --filter @tinycore/admin-ui run build",
        "build:client": "pnpm --filter @jbatch/tinycore-client run build",
        "clean": "pnpm -r run clean",
        "lint": "pnpm -r run lint",
        "test": "pnpm -r run test",
        "migrate": "pnpm --filter @tinycore/server run migrate",
        "docker:build": "docker build -t tinycore-kv .",
        "docker:run": "docker run -p 3000:3000 --mount type=volume,src=kv-data,dst=/app/data --name tinycore-kv tinycore-kv"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^8.41.0",
        "@typescript-eslint/parser": "^8.41.0",
        "eslint": "^9.34.0",
        "jest": "^30.1.1",
        "typescript": "^5.9.2"
    },
    "packageManager": "pnpm@10.15.0"
}