{
    "name": "tinycore",
    "version": "0.1.0",
    "description": "Simple key-value store service for TinyCore infrastructure",
    "main": "dist/index.js",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "start": "NODE_ENV=production node dist/index.js",
        "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
        "dev:admin-ui": "pnpm --filter @tinycore/admin-ui run dev",
        "dev:all": "pnpm -r --parallel run dev",
        "build": "pnpm -r run build && tsc",
        "build:client": "pnpm --filter @tinycore/client run build",
        "clean": "pnpm -r --parallel run dev",
        "lint": "eslint . --ext .ts",
        "test": "jest",
        "test:all": "pnpm -r --parallel run test",
        "migrate": "ts-node src/scripts/migrate.ts",
        "docker:build": "docker build -t tinycore-kv .",
        "docker:run": "docker run -p 3000:3000 --mount type=volume,src=kv-data,dst=/app/data tinycore-kv"
    },
    "dependencies": {
        "@tinycore/shared": "workspace:*",
        "bcrypt": "^6.0.0",
        "cors": "^2.8.5",
        "express": "^4.17.21",
        "express-validator": "^7.0.1",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.2",
        "sqlite3": "^5.1.7",
        "winston": "^3.11.0"
    },
    "devDependencies": {
        "@types/express-serve-static-core": "^5.0.7",
        "@types/qs": "^6.14.0",
        "@types/bcrypt": "^6.0.0",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.12",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^20.0.0",
        "@types/sqlite3": "^3.1.11",
        "@typescript-eslint/eslint-plugin": "^7.0.0",
        "@typescript-eslint/parser": "^7.0.0",
        "eslint": "^8.56.0",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.0"
    },
    "packageManager": "pnpm@10.15.0"
}