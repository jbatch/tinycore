{
    "name": "tinycore",
    "version": "0.1.0",
    "description": "Simple key-value store service for TinyCore infrastructure",
    "main": "dist/index.js",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "start": "NODE_ENV=production node dist/index.js",
        "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
        "dev:shared": "yarn workspace @tinycore/shared run dev",
        "dev:admin-ui": "yarn workspace @tinycore/admin-ui run dev",
        "dev:all": "yarn workspaces foreach -A -p run dev",
        "build": "yarn workspaces foreach -A -t run build && tsc",
        "build:client": "cd kv-admin && yarn && yarn build",
        "clean": "yarn workspaces foreach -A run clean && rm -rf dist",
        "lint": "eslint . --ext .ts",
        "test": "jest",
        "test:all": "yarn workspaces foreach -A run test",
        "migrate": "ts-node src/scripts/migrate.ts"
    },
    "dependencies": {
        "@tinycore/shared": "workspace:*",
        "bcrypt": "^6.0.0",
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "express-validator": "^7.0.1",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.2",
        "sqlite3": "^5.1.7",
        "winston": "^3.11.0"
    },
    "devDependencies": {
        "@types/bcrypt": "^6.0.0",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.12",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^20.0.0",
        "@types/sqlite3": "^3.1.11",
        "@typescript-eslint/eslint-plugin": "^7.0.0",
        "@typescript-eslint/parser": "^7.0.0",
        "eslint": "^8.56.0",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.0"
    },
    "packageManager": "yarn@4.9.3"
}
